@model List<DataCommon.Entities.Category>

<h2>Categories</h2>
<ul id="categoryList">
    <li class="category-item" data-category-id="">
        All Categories
    </li>
    @if (Model != null)
    {
        @foreach (var category in Model)
        {
            <li class="category-item" data-category-id="@category?.Id">
                @category?.Name
            </li>
        }
    }
    else
    {
        <li> No categories found</li>
    }
</ul>